extends layout

block content
    h1=title
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(action="/posts/add", method="post" enctype='multipart/form-data')
        .form-group
            label Title:
            input.form-control(type="text", name="title")
        .form-group
            label Category:
            select.form-control(name="category")
                each category, i in categories
                    option(value="#{category.name}") #{category.name}
        .form-group
            label Body:
            textarea.form-control(name="body", cols="30", rows="10" id="body")
        .form-group
            label Main Image:
            input.form-control(type="file", name="mainImage")
        .form-group
            label Author
            select.form-control(type="text", name="author")
                option(value="Damola Bankole") Damola Bankole 
                option(value="Aniekan Peters") Aniekan Peters        
        input.btn.btn-secondary(type='submit', name='submit', value='Save') 
        script(src="/ckeditor/ckeditor.js")
        script
            |   CKEDITOR.replace('body');