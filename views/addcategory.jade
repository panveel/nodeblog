extends layout

block content
    h1=title
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(action="/categories/add", method="post" )
        .form-group
            label Name:
            input.form-control(type="text", name="name")
        input.btn.btn-default(type='submit', name='submit', value='Save') 