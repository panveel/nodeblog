extends layout

block content
  if posts
    each post, i in posts
      .post
        h1
          a(href="/posts/show/#{post._id}")
            =post.title
        p.meta Posted in 
          a(href="/categories/show/#{post.category}") #{post.category} 
          by by #{post.author} 
          on on #{moment(post.date).format("DD-MM-YYYY")}
        img(src="/uploaded/#{post.mainImage}",width='300px', alt="cover photo")
        !=truncateText(post.body, 400)
        a.more(href='/posts/show/#{post._id}') Read More